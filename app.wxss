/* app.wxss - 苹果风格深绿色主题 */

/* 全局变量定义 */
page {
  --primary-green: #006400;
  --primary-green-light: #007E33;
  --primary-green-dark: #004D00;
  --secondary-green: #00A86B;
  --accent-green: #00D4AA;
  --background-light: #F8FFFE;
  --background-dark: #F0F8F0;
  --text-primary: #1A1A1A;
  --text-secondary: #666666;
  --text-light: #999999;
  --border-light: #E5E5E5;
  --shadow-light: rgba(0, 100, 0, 0.1);
  --shadow-medium: rgba(0, 100, 0, 0.15);
  --shadow-dark: rgba(0, 100, 0, 0.2);
  
  background-color: var(--background-light);
  color: var(--text-primary);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  line-height: 1.6;
}

/* 全局容器样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, var(--background-light) 0%, var(--background-dark) 100%);
  padding: 0;
  box-sizing: border-box;
}

/* 毛玻璃效果导航栏 */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-bottom: 1px solid var(--border-light);
  transition: all 0.3s ease;
}

.navbar.scrolled {
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 2px 20px var(--shadow-light);
}

/* 卡片基础样式 */
.card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 20rpx;
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 8rpx 32rpx var(--shadow-light);
  margin: 16rpx;
  padding: 32rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx var(--shadow-medium);
}

.card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 24rpx var(--shadow-light);
}

/* 按钮样式 */
.btn {
  background: linear-gradient(135deg, var(--primary-green) 0%, var(--primary-green-light) 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 16rpx var(--shadow-medium);
}

.btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 24rpx var(--shadow-dark);
}

.btn:active {
  transform: translateY(0);
  box-shadow: 0 2rpx 8rpx var(--shadow-light);
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.9);
  color: var(--primary-green);
  border: 2rpx solid var(--primary-green);
}

.btn-secondary:hover {
  background: var(--primary-green);
  color: white;
}

/* 输入框样式 */
.input {
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid var(--border-light);
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 32rpx;
  transition: all 0.3s ease;
}

.input:focus {
  border-color: var(--primary-green);
  box-shadow: 0 0 0 4rpx rgba(0, 100, 0, 0.1);
  outline: none;
}

/* 文本样式 */
.text-primary {
  color: var(--text-primary);
  font-weight: 600;
}

.text-secondary {
  color: var(--text-secondary);
  font-weight: 400;
}

.text-light {
  color: var(--text-light);
  font-size: 28rpx;
}

.text-green {
  color: var(--primary-green);
}

/* 图标样式 */
.icon {
  font-size: 48rpx;
  margin-right: 16rpx;
  opacity: 0.8;
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in-up {
  animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .card {
    margin: 12rpx;
    padding: 24rpx;
  }
  
  .btn {
    padding: 20rpx 40rpx;
    font-size: 28rpx;
  }
  
  .input {
    padding: 20rpx;
    font-size: 28rpx;
  }
}

/* 滚动条样式 */
::-webkit-scrollbar {
  width: 8rpx;
}

::-webkit-scrollbar-track {
  background: transparent;
}

::-webkit-scrollbar-thumb {
  background: var(--primary-green);
  border-radius: 4rpx;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--primary-green-light);
} 
