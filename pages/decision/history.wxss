/* pages/decision/history.wxss */

.container {
  padding: 24rpx;
  background: #f2f2f7;
  min-height: 100vh;
}

/* 通用卡片基础样式 */
.card-base {
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  width: 100%;
  box-sizing: border-box;
}

/* 页面标题 - 苹果风格设计 */
.header {
  text-align: center;
  padding: 48rpx 32rpx;
  color: #1d1d1f;
}

.header-top {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-bottom: 8rpx;
}

.back-btn {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  background: none;
  border: none;
  color: #007aff;
  font-size: 28rpx;
  font-weight: 500;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  transition: all 0.2s ease;
}

.back-btn:active {
  background: rgba(0, 122, 255, 0.1);
  transform: translateY(-50%) scale(0.95);
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
  color: #1d1d1f;
}

.subtitle {
  font-size: 26rpx;
  color: #86868b;
  display: block;
  font-weight: 400;
}

/* 历史记录列表 */
.history-list {
  margin-bottom: 16rpx;
}

.history-item {
  padding: 24rpx;
  transition: all 0.2s ease;
}

.history-item:active {
  transform: scale(0.98);
  background: #f8f9fa;
}

/* 总结性描述 */
.summary-description {
  margin-bottom: 16rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #e5e5ea;
}

.summary-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.summary-text {
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 500;
  line-height: 1.4;
  flex: 1;
  margin-right: 16rpx;
}

.summary-choice {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: #f2f2f7;
  min-width: 120rpx;
  justify-content: center;
}

.summary-choice.hire {
  background: rgba(52, 199, 89, 0.1);
  color: #34c759;
}

.summary-choice.self {
  background: rgba(255, 149, 0, 0.1);
  color: #ff9500;
}

.choice-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.choice-text {
  font-size: 24rpx;
  font-weight: 600;
}

/* 历史记录头部 */
.history-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.task-info {
  flex: 1;
  min-width: 0;
  margin-right: 16rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 8rpx;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.task-meta {
  display: flex;
  gap: 12rpx;
}

.task-type,
.task-time,
.task-price {
  font-size: 22rpx;
  color: #86868b;
  background: #f2f2f7;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}



/* 价格分析表格 */
.price-analysis-table {
  background: #f2f2f7;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
}



.table-row {
  display: flex;
  border-bottom: 1rpx solid #e5e5ea;
}

.table-row:last-child {
  border-bottom: none;
}

.table-cell {
  flex: 1;
  padding: 16rpx;
  font-size: 26rpx;
  color: #1d1d1f;
  font-weight: 500;
  text-align: center;
}

.table-cell:first-child {
  text-align: left;
  font-weight: 600;
}

.table-cell.positive {
  color: #34c759;
  font-weight: bold;
}

.table-cell.warning {
  color: #ff9500;
  font-weight: bold;
}

.table-cell.negative {
  color: #ff3b30;
  font-weight: bold;
}



/* 智能分析结果 */
.analysis-result {
  background: #f2f2f7;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
  border-left: 4rpx solid;
}

.analysis-result.positive-analysis {
  border-left-color: #34c759;
  background: rgba(52, 199, 89, 0.05);
}

.analysis-result.warning-analysis {
  border-left-color: #ff9500;
  background: rgba(255, 149, 0, 0.05);
}

.analysis-result.negative-analysis {
  border-left-color: #ff3b30;
  background: rgba(255, 59, 48, 0.05);
}

.analysis-text {
  font-size: 26rpx;
  color: #1d1d1f;
  line-height: 1.5;
  font-weight: 400;
}

/* 历史详情 */
.history-details {
  background: #f2f2f7;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.detail-row:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 24rpx;
  color: #86868b;
}

.detail-value {
  font-size: 24rpx;
  color: #1d1d1f;
  font-weight: 500;
}

.detail-row.positive .detail-value {
  color: #34c759;
}

.detail-row.negative .detail-value {
  color: #ff3b30;
}

.detail-row.user-choice .detail-value {
  font-weight: 600;
}

.detail-row.user-choice .hire-choice {
  color: #34c759;
}

.detail-row.user-choice .self-choice {
  color: #ff9500;
}

/* 历史记录底部 */
.history-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.timestamp {
  font-size: 22rpx;
  color: #86868b;
}

.actions {
  display: flex;
  gap: 8rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 32rpx;
  color: #1d1d1f;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  color: #1d1d1f;
}

.empty-desc {
  font-size: 26rpx;
  color: #86868b;
  margin-bottom: 32rpx;
  line-height: 1.4;
}

/* 底部操作 */
.bottom-actions {
  margin-top: 16rpx;
  margin-bottom: 0;
}

/* 按钮样式 */
.btn {
  width: 100%;
  height: 88rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.btn:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.btn-primary {
  background: #007aff;
  color: white;
}

.btn-danger {
  background: #ff3b30;
  color: white;
}

.btn-mini {
  width: auto;
  height: 60rpx;
  padding: 0 16rpx;
  font-size: 22rpx;
  border-radius: 12rpx;
}

/* 提示信息 */
.tips-section {
  margin-bottom: 16rpx;
}

.tips-card {
  padding: 24rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 12rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
}

.tips-content text {
  font-size: 22rpx;
  color: #86868b;
  line-height: 1.4;
  margin-bottom: 6rpx;
}

.tips-content text:last-child {
  margin-bottom: 0;
} 