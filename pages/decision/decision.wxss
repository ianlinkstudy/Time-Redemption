/* pages/decision/decision.wxss */

.container {
  padding: 24rpx;
  background: #f2f2f7;
  min-height: 100vh;
}

/* 通用卡片基础样式 */
.card-base {
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  width: 100%;
  box-sizing: border-box;
}

/* 页面标题 - 苹果风格设计 */
.header {
  text-align: center;
  padding: 48rpx 32rpx;
  color: #1d1d1f;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
  color: #1d1d1f;
}

.subtitle {
  font-size: 26rpx;
  color: #86868b;
  display: block;
  font-weight: 400;
}

/* 时间价值显示区域 - 苹果风格卡片设计 */
.time-value-section {
  margin-bottom: 0;
}

.time-value-card {
  padding: 32rpx;
  text-align: center;
  color: #1d1d1f;
}

.time-value-title {
  font-size: 28rpx;
  color: #86868b;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.time-value-amount {
  font-size: 48rpx;
  font-weight: 600;
  color: #007aff;
  margin-bottom: 8rpx;
  letter-spacing: -0.3rpx;
}

.time-value-tip {
  font-size: 24rpx;
  color: #86868b;
  font-weight: 400;
}

.suggested-price-tip {
  font-size: 24rpx;
  color: #007aff;
  margin-top: 8rpx;
  font-weight: 500;
}

.optional-tag {
  font-size: 20rpx;
  color: #86868b;
  font-weight: normal;
}

.no-time-value {
  padding: 32rpx;
  text-align: center;
  color: #1d1d1f;
}

.no-time-value-icon {
  font-size: 56rpx;
  margin-bottom: 16rpx;
  opacity: 0.8;
}

.no-time-value-text {
  font-size: 30rpx;
  color: #1d1d1f;
  margin-bottom: 24rpx;
  font-weight: 500;
}

/* 任务输入区域 - 苹果风格卡片设计 */
.task-input-section {
  padding: 32rpx;
  margin-bottom: 0;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 32rpx;
  text-align: center;
  letter-spacing: -0.3rpx;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 30rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  letter-spacing: -0.2rpx;
}

.label-tip {
  font-size: 24rpx;
  color: #007aff;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 88rpx;
  border: 1rpx solid #d1d1d6;
  border-radius: 16rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  color: #1d1d1f;
  box-sizing: border-box;
  background: #ffffff;
  transition: all 0.2s ease;
  font-weight: 400;
}

.input:focus {
  border-color: #007aff;
  background: #ffffff;
}

.textarea {
  width: 100%;
  min-height: 120rpx;
  border: 1rpx solid #d1d1d6;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 30rpx;
  color: #1d1d1f;
  box-sizing: border-box;
  background: #ffffff;
  transition: all 0.2s ease;
  font-weight: 400;
}

.textarea:focus {
  border-color: #007aff;
  background: #ffffff;
}

.picker {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 20rpx;
  border: 1rpx solid #d1d1d6;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #1d1d1f;
  background: #ffffff;
  font-weight: 400;
}

/* 分析按钮 */
.analyze-section {
  margin-top: 32rpx;
}

.btn-large {
  height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
}

/* 决策结果 */
.result-section {
  margin-bottom: 0;
}

.result-card {
  padding: 32rpx;
}

.hire-result {
  border-left: 4rpx solid #34c759;
}

.consider-result {
  border-left: 4rpx solid #ff9500;
}

.self-result {
  border-left: 4rpx solid #ff3b30;
}

.result-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.result-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.result-reason {
  font-size: 26rpx;
  color: #86868b;
  margin-bottom: 24rpx;
  padding: 16rpx;
  background: #f2f2f7;
  border-radius: 12rpx;
  line-height: 1.4;
}

.result-details {
  margin-bottom: 16rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #e5e5ea;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 26rpx;
  color: #86868b;
}

.detail-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.positive .detail-value {
  color: #34c759;
}

.negative .detail-value {
  color: #ff3b30;
}

.result-tip {
  text-align: center;
  padding: 16rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
}

.positive-tip {
  background: rgba(52, 199, 89, 0.1);
  color: #34c759;
}

.negative-tip {
  background: rgba(255, 59, 48, 0.1);
  color: #ff3b30;
}


/* 决策建议样式 */
.decision-recommendation {
  text-align: center;
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  border-radius: 16rpx;
  color: white;
}

.recommendation-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.recommendation-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  line-height: 1.4;
}

/* 价格分析样式 */
.price-analysis {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #4CAF50;
}

.price-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.price-detail {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 对比表格样式 */
.comparison-table {
  margin-bottom: 32rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  overflow: hidden;
}

.table-header {
  display: flex;
  background: #4CAF50;
  color: white;
  font-weight: bold;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #e0e0e0;
}

.table-row:last-child {
  border-bottom: none;
}

.table-cell {
  flex: 1;
  padding: 20rpx 16rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.table-cell:first-child {
  background: #f8f9fa;
  font-weight: 500;
}

.table-cell.positive {
  color: #4CAF50;
  font-weight: bold;
}

.table-cell.negative {
  color: #f44336;
  font-weight: bold;
}

/* 总结信息样式 */
.summary-info {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #fff3cd;
  border: 1rpx solid #ffeaa7;
  border-radius: 12rpx;
}

.summary-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #856404;
}

.highlight-text {
  font-weight: bold;
  color: #4CAF50;
}

/* 决策指南样式 */
.decision-guide-section {
  margin-top: 32rpx;
}

.guide-card {
  padding: 24rpx;
}

.guide-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.guide-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.guide-content text {
  font-size: 26rpx;
  line-height: 1.5;
  color: #666;
}

/* 用户选择样式 */
.user-choice-section {
  margin-top: 32rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #e0e0e0;
}

.choice-title {
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 24rpx;
  color: #333;
}

.choice-buttons {
  display: flex;
  gap: 16rpx;
}

.choice-btn {
  flex: 1;
  height: 88rpx;
  font-size: 30rpx;
  font-weight: bold;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 12rpx;
  margin-bottom: 0;
  flex-wrap: wrap;
}

.action-buttons .btn {
  flex: 1;
  min-width: 0;
}

.btn {
  height: 88rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.btn:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.btn-primary {
  background: #007aff;
  color: white;
}

.btn-secondary {
  background: #34c759;
  color: white;
}

.btn-outline {
  background: #ffffff;
  color: #86868b;
  border: 1rpx solid #d1d1d6;
}

.btn-info {
  background: #ff9500;
  color: white;
}

.btn::after {
  border: none;
}

/* 温馨提示 */
.tips-section {
  margin-bottom: 0;
}

.tips-card {
  padding: 32rpx;
}

.tips-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 16rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
}

.tips-content text {
  margin-bottom: 8rpx;
}

.tips-content text:last-child {
  margin-bottom: 0;
}

.tips-content text {
  font-size: 24rpx;
  color: #86868b;
  line-height: 1.4;
}

/* 响应式设计优化 */
@media (max-width: 400px) {
  .container {
    padding: 16rpx;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .action-buttons .btn {
    margin-bottom: 12rpx;
  }
}