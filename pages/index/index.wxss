/* pages/index/index.wxss */

/* 移除 page 标签选择器，不兼容 */

.container {
  padding: 24rpx;
  min-height: 100vh;
  background-color: #f2f2f7;
}

/* 通用卡片基础样式 */
.card-base {
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  width: 100%;
  box-sizing: border-box;
}

/* 欢迎头部 - 苹果风格卡片设计 */
.welcome-header {
  padding: 48rpx 32rpx;
  color: #1d1d1f;
  text-align: center;
}

.welcome-icon {
  font-size: 56rpx;
  margin-bottom: 16rpx;
  opacity: 0.8;
}

.welcome-title {
  margin-bottom: 24rpx;
}

.main-title {
  font-size: 48rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
  color: #1d1d1f;
}

.sub-title {
  font-size: 26rpx;
  opacity: 0.6;
  display: block;
  color: #86868b;
  font-weight: 400;
}

.welcome-greeting {
  background: #f2f2f7;
  border-radius: 12rpx;
  padding: 24rpx;
}

.greeting-text {
  font-size: 30rpx;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
  color: #1d1d1f;
}

.greeting-desc {
  font-size: 24rpx;
  opacity: 0.6;
  display: block;
  color: #86868b;
}

/* 时间赎回成果 - 苹果风格卡片设计 */
.results-section {
  margin-bottom: 0;
}

.results-card {
  padding: 32rpx;
  color: #1d1d1f;
}

.results-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.results-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
  opacity: 0.8;
}

.results-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
  letter-spacing: -0.3rpx;
}

.results-grid {
  display: flex;
  gap: 16rpx;
}

.result-item {
  text-align: center;
  flex: 1;
  padding: 24rpx 16rpx;
  background: #f2f2f7;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.result-item:active {
  transform: scale(0.98);
  background: #e5e5ea;
}

.result-icon {
  font-size: 32rpx;
  margin-bottom: 12rpx;
  opacity: 0.8;
}

.result-value {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  letter-spacing: -0.3rpx;
  display: block;
  color: #1d1d1f;
}

.result-label {
  font-size: 22rpx;
  line-height: 1.3;
  font-weight: 400;
  color: #86868b;
}

/* 快速操作 */
.quick-actions-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.quick-actions {
  display: flex;
  margin: 0 -7.5rpx;
}

.quick-actions .quick-action-item {
  margin: 0 7.5rpx;
}

.quick-action-item {
  flex: 1;
  background: white;
  border-radius: 15rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #f0f0f0;
}

/* 移除 :active 伪类，不兼容 */

.quick-action-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.quick-action-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.quick-action-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
}

/* 三步赎回你的时间 - 苹果风格卡片设计 */
.steps-section {
  margin-bottom: 0;
}

.steps-card {
  padding: 32rpx;
  color: #1d1d1f;
}

.steps-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.steps-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
  opacity: 0.8;
}

.steps-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
  letter-spacing: -0.3rpx;
}

.steps-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.step-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f2f2f7;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.step-item:active {
  transform: scale(0.98);
  background: #e5e5ea;
}

.step-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  opacity: 0.8;
}

.step-content {
  flex: 1;
  min-width: 0;
}

.step-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
  letter-spacing: -0.2rpx;
  color: #1d1d1f;
}

.step-desc {
  font-size: 24rpx;
  line-height: 1.3;
  color: #86868b;
  font-weight: 400;
}

.step-status {
  width: 44rpx;
  height: 44rpx;
  background: #34c759;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 600;
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 功能导航 */
.features-section {
  margin-bottom: 30rpx;
}

.features-grid {
  display: flex;
  flex-direction: column;
}

.features-grid .feature-item {
  margin-bottom: 15rpx;
}

.features-grid .feature-item:last-child {
  margin-bottom: 0;
}

.feature-item {
  background: white;
  border-radius: 15rpx;
  padding: 25rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #f0f0f0;
}

/* 移除 :active 伪类，不兼容 */

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 20rpx;
}

.feature-content {
  flex: 1;
}

.feature-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.feature-arrow {
  font-size: 28rpx;
  color: #999;
  margin-left: 15rpx;
}

/* 今日金句 - 苹果风格卡片设计 */
.today-tip-section {
  margin-bottom: 0;
}

.tip-card {
  padding: 32rpx;
  display: flex;
  align-items: center;
}

.tip-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
  opacity: 0.8;
}

.tip-content {
  flex: 1;
  min-width: 0;
}

.tip-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 12rpx;
  letter-spacing: -0.2rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #1d1d1f;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.tip-author {
  font-size: 22rpx;
  color: #86868b;
  font-style: italic;
  font-weight: 400;
}

/* 新用户引导 */
.guide-section {
  margin-bottom: 30rpx;
}

.guide-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  color: #333;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #74b9ff;
}

.guide-icon {
  font-size: 64rpx;
  margin-bottom: 20rpx;
}

.guide-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.guide-steps {
  margin-bottom: 30rpx;
}

.guide-step {
  font-size: 26rpx;
  margin-bottom: 10rpx;
  color: #666;
}

.guide-btn {
  background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 15rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 15rpx rgba(116, 185, 255, 0.3);
}

.guide-btn::after {
  border: none;
}

/* 底部操作 - 苹果风格按钮设计 */
.bottom-actions {
  margin-top: 16rpx;
  margin-bottom: 0;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  transition: all 0.2s ease;
  background: #007aff;
  color: white;
  box-shadow: 0 2rpx 20rpx rgba(0, 122, 255, 0.2);
}

.action-btn:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.action-btn::after {
  border: none;
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 28rpx;
}

/* 版权信息 - 苹果风格设计 */
.copyright {
  text-align: center;
  padding: 32rpx;
}

.copyright-text {
  font-size: 28rpx;
  color: #1d1d1f;
  font-style: italic;
  margin-bottom: 12rpx;
  display: block;
  font-weight: 500;
  letter-spacing: -0.1rpx;
}

.copyright-author {
  font-size: 24rpx;
  color: #86868b;
  display: block;
  font-weight: 400;
}

/* 响应式设计 */
@media (max-width: 400px) {
  .container {
    padding: 15rpx;
  }
  
  .stats-grid {
    flex-direction: column;
  }
  
  .stats-grid .stat-item {
    margin-bottom: 20rpx;
  }
  
  .stats-grid .stat-item:last-child {
    margin-bottom: 0;
  }
  
  .quick-actions {
    flex-direction: column;
  }
  
  .quick-action-item {
    margin-bottom: 10rpx;
  }
  
  .feature-item {
    flex-direction: column;
    text-align: center;
  }
  
  .feature-icon {
    margin-right: 0;
    margin-bottom: 15rpx;
  }
  
  .feature-arrow {
    margin-left: 0;
    margin-top: 10rpx;
  }
  
  .bottom-actions {
    flex-direction: column;
  }
  
  .action-btn {
    margin-bottom: 10rpx;
  }
  
  .tip-card {
    flex-direction: column;
    text-align: center;
  }
  
  .tip-icon {
    margin-right: 0;
    margin-bottom: 15rpx;
  }
  
  .quick-actions {
    margin: 0;
    flex-direction: column;
  }
  
  .quick-actions .quick-action-item {
    margin: 0 0 15rpx 0;
  }
  
  .quick-actions .quick-action-item:last-child {
    margin-bottom: 0;
  }
  
  .bottom-actions {
    margin: 0 0 30rpx 0;
    flex-direction: column;
  }
  
  .bottom-actions .action-btn {
    margin: 0 0 15rpx 0;
  }
  
  .bottom-actions .action-btn:last-child {
    margin-bottom: 0;
  }
}

/* 动画效果 */
.welcome-header,
.stats-overview,
.quick-action-item,
.feature-item,
.tip-card,
.guide-card,
.copyright {
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 统计数字动画 */
.stat-value {
  animation: countUp 1s ease-out;
}

@keyframes countUp {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* 悬浮动画 */
.welcome-header {
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-5rpx);
  }
}

/* 加载动画 */
.quick-actions,
.features-grid {
  animation: slideInLeft 0.8s ease-out;
}

@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}
