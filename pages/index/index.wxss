/* pages/index/index.wxss - 苹果风格深绿色主题 */

/* 主要内容区域 */
.main-content {
  padding-top: 120rpx;
  padding-bottom: 40rpx;
  min-height: 100vh;
}

/* 导航栏样式 */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-bottom: 1px solid var(--border-light);
  transition: all 0.3s ease;
}

.navbar.scrolled {
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 2px 20px var(--shadow-light);
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  height: 88rpx;
}

.navbar-title {
  display: flex;
  align-items: center;
}

.navbar-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
  color: var(--primary-green);
}

.navbar-text {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.navbar-actions {
  display: flex;
  align-items: center;
}

.navbar-btn {
  background: rgba(255, 255, 255, 0.8);
  border: 1px solid var(--border-light);
  border-radius: 12rpx;
  padding: 12rpx 24rpx;
  transition: all 0.3s ease;
}

.navbar-btn:active {
  background: var(--primary-green);
  color: white;
}

.navbar-btn-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

/* 欢迎卡片样式 */
.welcome-card {
  margin: 24rpx 32rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(248, 255, 254, 0.95) 100%);
  text-align: center;
  padding: 48rpx 32rpx;
}

.welcome-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
}

.welcome-icon {
  font-size: 56rpx;
  margin-bottom: 24rpx;
  color: var(--primary-green);
}

.welcome-content {
  text-align: center;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-primary);
  display: block;
  margin-bottom: 8rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  display: block;
}

/* 时间价值显示 */
.time-value-display {
  margin-top: 24rpx;
}

.time-value-card {
  background: linear-gradient(135deg, var(--primary-green) 0%, var(--primary-green-light) 100%);
  border-radius: 16rpx;
  padding: 32rpx;
  text-align: center;
  color: white;
}

.time-value-label {
  font-size: 24rpx;
  opacity: 0.9;
  display: block;
  margin-bottom: 8rpx;
}

.time-value-amount {
  font-size: 48rpx;
  font-weight: 700;
  display: block;
}

/* 设置提示 */
.setup-prompt {
  text-align: center;
  padding: 32rpx 0;
}

.setup-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  display: block;
  margin-bottom: 24rpx;
}

.setup-btn {
  display: inline-flex;
  align-items: center;
  background: linear-gradient(135deg, var(--primary-green) 0%, var(--primary-green-light) 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 16rpx var(--shadow-medium);
}

.setup-btn:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 24rpx var(--shadow-dark);
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
}

/* 结果卡片样式 */
.results-card {
  margin: 24rpx 32rpx;
}

.results-header {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.results-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
  color: var(--primary-green);
}

.results-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.results-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.result-item {
  text-align: center;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 16rpx;
  border: 1px solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.result-item:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx var(--shadow-light);
}

.result-icon {
  font-size: 40rpx;
  margin-bottom: 16rpx;
  display: block;
  color: var(--primary-green);
}

.result-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-value {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.result-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 4rpx;
}

.result-unit {
  font-size: 20rpx;
  color: var(--text-light);
}

/* 功能卡片样式 */
.features-card {
  margin: 24rpx 32rpx;
}

.features-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.features-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
  color: var(--primary-green);
}

.features-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.features-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 16rpx;
  border: 1px solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.feature-item:hover {
  transform: translateX(8rpx);
  box-shadow: 0 4rpx 16rpx var(--shadow-light);
}

.feature-item:active {
  transform: translateX(4rpx);
}

.feature-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
  color: var(--primary-green);
}

.feature-content {
  flex: 1;
}

.feature-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  display: block;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  display: block;
}

.feature-status {
  margin-right: 16rpx;
}

.status-icon {
  font-size: 32rpx;
  color: var(--primary-green);
  font-weight: bold;
}

.feature-arrow {
  font-size: 32rpx;
  color: var(--text-light);
  font-weight: 300;
}

/* 金句卡片样式 */
.quote-card {
  margin: 24rpx 32rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(248, 255, 254, 0.95) 100%);
}

.quote-icon {
  font-size: 48rpx;
  color: var(--primary-green);
  margin-bottom: 24rpx;
  display: block;
  text-align: center;
}

.quote-content {
  text-align: center;
}

.quote-text {
  font-size: 32rpx;
  color: var(--text-primary);
  font-style: italic;
  display: block;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.quote-author {
  font-size: 26rpx;
  color: var(--text-secondary);
  display: block;
}

/* 快速操作卡片样式 */
.quick-actions-card {
  margin: 24rpx 32rpx;
}

.quick-actions-header {
  margin-bottom: 32rpx;
}

.quick-actions-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.quick-actions-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.quick-action-btn {
  background: rgba(255, 255, 255, 0.5);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 32rpx 16rpx;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.quick-action-btn:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx var(--shadow-light);
  background: rgba(255, 255, 255, 0.8);
}

.quick-action-btn:active {
  transform: translateY(-2rpx);
}

.quick-action-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  color: var(--primary-green);
}

.quick-action-text {
  font-size: 26rpx;
  color: var(--text-primary);
  font-weight: 500;
}

/* 底部版权信息 */
.footer-card {
  margin: 24rpx 32rpx;
  text-align: center;
  background: rgba(255, 255, 255, 0.5);
}

.footer-text {
  font-size: 28rpx;
  color: var(--text-primary);
  font-style: italic;
  display: block;
  margin-bottom: 12rpx;
}

.footer-author {
  font-size: 24rpx;
  color: var(--text-secondary);
  display: block;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .main-content {
    padding-top: 100rpx;
  }
  
  .welcome-card,
  .results-card,
  .features-card,
  .quote-card {
    margin: 16rpx 24rpx;
  }
  
  .results-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .quick-actions-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* 动画延迟 */
.fade-in-up:nth-child(1) { animation-delay: 0.1s; }
.fade-in-up:nth-child(2) { animation-delay: 0.2s; }
.fade-in-up:nth-child(3) { animation-delay: 0.3s; }
.fade-in-up:nth-child(4) { animation-delay: 0.4s; }
.fade-in-up:nth-child(5) { animation-delay: 0.5s; }
.fade-in-up:nth-child(6) { animation-delay: 0.6s; }
