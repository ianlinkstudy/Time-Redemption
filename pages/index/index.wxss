/* pages/index/index.wxss */

/* 移除 page 标签选择器，不兼容 */

.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 欢迎头部 - 纯色卡片设计 */
.welcome-header {
  background: #FFD93D;
  border-radius: 24rpx;
  padding: 56rpx 40rpx;
  margin-bottom: 32rpx;
  color: #1F2937;
  text-align: center;
  box-shadow: 0 16rpx 48rpx rgba(253, 224, 71, 0.3);
  position: relative;
  overflow: hidden;
}

.welcome-title {
  margin-bottom: 30rpx;
}

.main-title {
  font-size: 56rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.sub-title {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

.welcome-greeting {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
  padding: 20rpx;
}

.greeting-text {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.greeting-desc {
  font-size: 26rpx;
  opacity: 0.9;
  display: block;
}

/* 时间赎回成果 - 纯色卡片设计 */
.results-section {
  margin-bottom: 32rpx;
}

.results-card {
  background: #1E3A8A;
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  color: white;
  box-shadow: 0 16rpx 48rpx rgba(30, 58, 138, 0.3);
  position: relative;
  overflow: hidden;
}

.results-icon {
  font-size: 64rpx;
  text-align: center;
  margin-bottom: 24rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
}

.results-title {
  font-size: 40rpx;
  font-weight: 800;
  text-align: center;
  margin-bottom: 40rpx;
  letter-spacing: -0.5rpx;
}

.results-grid {
  display: flex;
  justify-content: space-between;
  align-items: stretch;
  gap: 24rpx;
}

.result-item {
  text-align: center;
  flex: 1;
  padding: 32rpx 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.result-item:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.result-icon {
  font-size: 40rpx;
  margin-bottom: 16rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.result-value {
  font-size: 48rpx;
  font-weight: 800;
  margin-bottom: 16rpx;
  letter-spacing: -0.5rpx;
  display: block;
}

.result-label {
  font-size: 28rpx;
  line-height: 1.4;
  font-weight: 600;
  opacity: 0.9;
}

/* 快速操作 */
.quick-actions-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.quick-actions {
  display: flex;
  margin: 0 -7.5rpx;
}

.quick-actions .quick-action-item {
  margin: 0 7.5rpx;
}

.quick-action-item {
  flex: 1;
  background: white;
  border-radius: 15rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #f0f0f0;
}

/* 移除 :active 伪类，不兼容 */

.quick-action-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.quick-action-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.quick-action-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
}

/* 三步赎回你的时间 - 纯色卡片设计 */
.steps-section {
  margin-bottom: 32rpx;
}

.steps-card {
  background: #10B981;
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  color: white;
  box-shadow: 0 16rpx 48rpx rgba(16, 185, 129, 0.3);
  position: relative;
  overflow: hidden;
}

.steps-icon {
  font-size: 64rpx;
  text-align: center;
  margin-bottom: 24rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
}

.steps-title {
  font-size: 40rpx;
  font-weight: 800;
  text-align: center;
  margin-bottom: 40rpx;
  letter-spacing: -0.5rpx;
}

.steps-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.step-item {
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.step-item:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.step-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.step-content {
  flex: 1;
  min-width: 0;
}

.step-title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  letter-spacing: -0.3rpx;
}

.step-desc {
  font-size: 30rpx;
  line-height: 1.5;
  opacity: 0.9;
}

.step-status {
  width: 64rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 800;
  margin-left: 24rpx;
  flex-shrink: 0;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

/* 功能导航 */
.features-section {
  margin-bottom: 30rpx;
}

.features-grid {
  display: flex;
  flex-direction: column;
}

.features-grid .feature-item {
  margin-bottom: 15rpx;
}

.features-grid .feature-item:last-child {
  margin-bottom: 0;
}

.feature-item {
  background: white;
  border-radius: 15rpx;
  padding: 25rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #f0f0f0;
}

/* 移除 :active 伪类，不兼容 */

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 20rpx;
}

.feature-content {
  flex: 1;
}

.feature-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.feature-arrow {
  font-size: 28rpx;
  color: #999;
  margin-left: 15rpx;
}

/* 今日金句 - 纯色卡片设计 */
.today-tip-section {
  margin-bottom: 32rpx;
}

.tip-card {
  background: #F97316;
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 16rpx 48rpx rgba(249, 115, 22, 0.3);
  position: relative;
  overflow: hidden;
}

.tip-icon {
  font-size: 64rpx;
  margin-right: 32rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
}

.tip-content {
  flex: 1;
  min-width: 0;
}

.tip-title {
  font-size: 36rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
  letter-spacing: -0.3rpx;
}

.tip-text {
  font-size: 30rpx;
  color: white;
  line-height: 1.6;
  margin-bottom: 16rpx;
  opacity: 0.9;
}

.tip-author {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  font-style: italic;
  font-weight: 500;
}

/* 新用户引导 */
.guide-section {
  margin-bottom: 30rpx;
}

.guide-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  color: #333;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #74b9ff;
}

.guide-icon {
  font-size: 64rpx;
  margin-bottom: 20rpx;
}

.guide-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.guide-steps {
  margin-bottom: 30rpx;
}

.guide-step {
  font-size: 26rpx;
  margin-bottom: 10rpx;
  color: #666;
}

.guide-btn {
  background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 15rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 15rpx rgba(116, 185, 255, 0.3);
}

.guide-btn::after {
  border: none;
}

/* 底部操作 - 纯色按钮设计 */
.bottom-actions {
  margin-bottom: 32rpx;
}

.action-btn {
  width: 100%;
  height: 112rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 700;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
}

.action-btn:active::before {
  left: 100%;
}

.action-btn.secondary {
  background: #1E3A8A;
  color: white;
  box-shadow: 0 12rpx 40rpx rgba(30, 58, 138, 0.4);
}

.action-btn.secondary:active {
  transform: translateY(4rpx);
  box-shadow: 0 6rpx 20rpx rgba(30, 58, 138, 0.5);
}

.action-btn::after {
  border: none;
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 28rpx;
}

/* 版权信息 - 纯色设计 */
.copyright {
  text-align: center;
  padding: 48rpx 40rpx;
  background: #FFD93D;
  border-radius: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 12rpx 40rpx rgba(253, 224, 71, 0.2);
  position: relative;
  overflow: hidden;
}

.copyright-text {
  font-size: 30rpx;
  color: #1F2937;
  font-style: italic;
  margin-bottom: 16rpx;
  display: block;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.copyright-author {
  font-size: 26rpx;
  color: rgba(31, 41, 55, 0.8);
  display: block;
  font-weight: 500;
  opacity: 0.8;
}

/* 响应式设计 */
@media (max-width: 400px) {
  .container {
    padding: 15rpx;
  }
  
  .stats-grid {
    flex-direction: column;
  }
  
  .stats-grid .stat-item {
    margin-bottom: 20rpx;
  }
  
  .stats-grid .stat-item:last-child {
    margin-bottom: 0;
  }
  
  .quick-actions {
    flex-direction: column;
  }
  
  .quick-action-item {
    margin-bottom: 10rpx;
  }
  
  .feature-item {
    flex-direction: column;
    text-align: center;
  }
  
  .feature-icon {
    margin-right: 0;
    margin-bottom: 15rpx;
  }
  
  .feature-arrow {
    margin-left: 0;
    margin-top: 10rpx;
  }
  
  .bottom-actions {
    flex-direction: column;
  }
  
  .action-btn {
    margin-bottom: 10rpx;
  }
  
  .tip-card {
    flex-direction: column;
    text-align: center;
  }
  
  .tip-icon {
    margin-right: 0;
    margin-bottom: 15rpx;
  }
  
  .quick-actions {
    margin: 0;
    flex-direction: column;
  }
  
  .quick-actions .quick-action-item {
    margin: 0 0 15rpx 0;
  }
  
  .quick-actions .quick-action-item:last-child {
    margin-bottom: 0;
  }
  
  .bottom-actions {
    margin: 0 0 30rpx 0;
    flex-direction: column;
  }
  
  .bottom-actions .action-btn {
    margin: 0 0 15rpx 0;
  }
  
  .bottom-actions .action-btn:last-child {
    margin-bottom: 0;
  }
}

/* 动画效果 */
.welcome-header,
.stats-overview,
.quick-action-item,
.feature-item,
.tip-card,
.guide-card,
.copyright {
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 统计数字动画 */
.stat-value {
  animation: countUp 1s ease-out;
}

@keyframes countUp {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* 悬浮动画 */
.welcome-header {
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-5rpx);
  }
}

/* 加载动画 */
.quick-actions,
.features-grid {
  animation: slideInLeft 0.8s ease-out;
}

@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}
