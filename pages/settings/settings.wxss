/* pages/settings/settings.wxss */

.container {
  padding: 24rpx;
  background: #f2f2f7;
  min-height: 100vh;
}

/* 通用卡片基础样式 */
.card-base {
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  width: 100%;
  box-sizing: border-box;
}

/* 页面标题 - 苹果风格设计 */
.header {
  text-align: center;
  padding: 48rpx 32rpx;
  color: #1d1d1f;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
  color: #1d1d1f;
}

.subtitle {
  font-size: 26rpx;
  color: #86868b;
  display: block;
  font-weight: 400;
}

/* 时间管理者卡片 */
.user-info-section {
  margin-bottom: 0;
}

.user-info-card {
  padding: 32rpx;
  display: flex;
  align-items: center;
  color: #1d1d1f;
}

/* 微信最新的头像选择按钮样式 */
.avatar-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #007aff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 32rpx;
  position: relative;
  overflow: hidden;
  border: none;
  outline: none;
  padding: 0;
  line-height: 1;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
  transition: all 0.3s ease;
}

.avatar-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.4);
}

.avatar-btn::after {
  border: none;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 60rpx;
  border: none;
  box-shadow: none;
  background: transparent;
}

.avatar-text {
  font-size: 48rpx;
  font-weight: 600;
  color: white;
}

.user-details {
  flex: 1;
}

/* 昵称输入框样式 */
.nickname-input-section {
  margin-bottom: 16rpx;
}

.nickname-input {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
  padding: 12rpx 0;
  border: none;
  background: transparent;
  width: 100%;
  box-sizing: border-box;
  letter-spacing: -0.2rpx;
}

.nickname-input::placeholder {
  color: #86868b;
  font-weight: 400;
}

.nickname-hint {
  font-size: 22rpx;
  color: #007aff;
  opacity: 0.8;
  margin-top: 4rpx;
  display: block;
}

/* 登录状态样式 */
.login-status {
  margin-bottom: 16rpx;
}

.login-status-text {
  font-size: 24rpx;
  font-weight: 500;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.login-success {
  color: #34c759;
  background: rgba(52, 199, 89, 0.1);
}

.login-pending {
  color: #ff9500;
  background: rgba(255, 149, 0, 0.1);
}

.user-stats {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-stat {
  font-size: 26rpx;
  color: #86868b;
  line-height: 1.4;
  font-weight: 400;
}

/* 微信信息获取按钮 */
.wechat-info-section {
  margin-bottom: 0;
}

/* 微信快捷登录按钮 */
.wechat-quick-login-btn {
  padding: 32rpx;
  display: flex;
  align-items: center;
  color: #07c160;
  transition: all 0.3s ease;
  margin-bottom: 16rpx;
  background: linear-gradient(135deg, #07c160, #00d4aa);
}

.wechat-quick-login-btn:active {
  background: linear-gradient(135deg, #00d4aa, #07c160);
  transform: scale(0.98);
}

.wechat-info-btn {
  padding: 32rpx;
  display: flex;
  align-items: center;
  color: #1d1d1f;
  transition: all 0.3s ease;
}

.wechat-info-btn:active {
  background: #f2f2f7;
  transform: scale(0.98);
}

.wechat-icon {
  font-size: 32rpx;
  margin-right: 24rpx;
}

.wechat-text {
  flex: 1;
  font-size: 30rpx;
  color: #1d1d1f;
  font-weight: 500;
}

.wechat-arrow {
  font-size: 24rpx;
  color: #86868b;
}



/* 重置用户信息按钮 */
.logout-btn {
  padding: 32rpx;
  display: flex;
  align-items: center;
  color: #ff9500;
  transition: all 0.3s ease;
  margin-top: 16rpx;
}

.logout-btn:active {
  background: #fff8f0;
  transform: scale(0.98);
}

.logout-icon {
  font-size: 32rpx;
  margin-right: 24rpx;
}

.logout-text {
  flex: 1;
  font-size: 30rpx;
  color: #ff9500;
  font-weight: 500;
}

.logout-arrow {
  font-size: 24rpx;
  color: #ff9500;
}



/* 使用帮助 */
.help-section {
  margin-bottom: 0;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 32rpx;
  text-align: center;
  letter-spacing: -0.3rpx;
}

.help-content {
  padding: 32rpx;
}

.help-step {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #e5e5ea;
}

.help-step:last-child {
  border-bottom: none;
}

.help-step-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
  width: 60rpx;
  text-align: center;
}

.help-step-content {
  flex: 1;
}

.help-step-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 8rpx;
  display: block;
  letter-spacing: -0.2rpx;
}

.help-step-desc {
  font-size: 26rpx;
  color: #86868b;
  line-height: 1.4;
  display: block;
  font-weight: 400;
}

/* 意见反馈 */
.feedback-section {
  margin-bottom: 0;
}

.feedback-content {
  padding: 32rpx;
}

.feedback-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #e5e5ea;
}

.feedback-item:last-child {
  border-bottom: none;
}

.feedback-icon {
  font-size: 32rpx;
  margin-right: 24rpx;
}

.feedback-text {
  flex: 1;
  font-size: 30rpx;
  color: #1d1d1f;
  font-weight: 500;
}

.feedback-version {
  font-size: 24rpx;
  color: #86868b;
  margin-right: 12rpx;
}

.feedback-arrow {
  font-size: 24rpx;
  color: #86868b;
}

/* 数据管理 */
.data-section {
  margin-bottom: 0;
}

.data-content {
  padding: 32rpx;
}

.data-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #e5e5ea;
}

.data-item:last-child {
  border-bottom: none;
}

.data-icon {
  font-size: 32rpx;
  margin-right: 24rpx;
}

.data-text {
  flex: 1;
  font-size: 30rpx;
  color: #ff3b30;
  font-weight: 500;
}

.data-arrow {
  font-size: 24rpx;
  color: #86868b;
}

/* 版权信息 */
.copyright-section {
  margin-bottom: 0;
}

.copyright-text {
  text-align: center;
  padding: 32rpx;
  color: #86868b;
}

.copyright-line {
  font-size: 24rpx;
  line-height: 1.6;
  display: block;
  margin-bottom: 8rpx;
  font-weight: 400;
}

.copyright-line:last-child {
  margin-bottom: 0;
  color: #1d1d1f;
  font-weight: 500;
}

/* 响应式设计优化 */
@media (max-width: 400px) {
  .container {
    padding: 16rpx;
  }
  
  .user-info-card {
    flex-direction: column;
    text-align: center;
  }
  
  .avatar-btn {
    margin-right: 0;
    margin-bottom: 24rpx;
  }
  
  .nickname-input {
    text-align: center;
  }
}

/* 手机号获取按钮样式 */
.phone-section {
  margin-bottom: 20rpx;
}

.phone-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #1890ff, #40a9ff);
  color: white;
  border-radius: 16rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
  transition: all 0.3s ease;
}

.phone-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.4);
}

.phone-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.phone-text {
  font-size: 28rpx;
  font-weight: 500;
}

.phone-display {
  display: block;
  text-align: center;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
}

/* 完成设置按钮样式 */
.complete-section {
  margin-bottom: 20rpx;
}

.complete-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #52c41a, #73d13d);
  color: white;
  border-radius: 16rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.3);
  transition: all 0.3s ease;
}

.complete-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(82, 196, 26, 0.4);
}

.complete-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.complete-text {
  font-size: 28rpx;
  font-weight: 500;
} 