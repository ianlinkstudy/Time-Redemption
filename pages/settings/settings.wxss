/* pages/settings/settings.wxss */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 30rpx 0;
  background: linear-gradient(135deg, #00b894 0%, #00cec9 100%);
  border-radius: 20rpx;
  color: white;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

/* 用户信息卡片 */
.user-info-section {
  margin-bottom: 30rpx;
}

.user-info-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  border: 2rpx solid #00b894;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: linear-gradient(135deg, #00b894 0%, #00cec9 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}

.avatar-text {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
}

.edit-icon {
  font-size: 24rpx;
  margin-left: 10rpx;
  opacity: 0.6;
}

.user-stats {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.user-stat {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 快捷操作 */
.quick-actions-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.quick-actions {
  display: flex;
  gap: 15rpx;
}

.quick-action-item {
  flex: 1;
  background: white;
  border-radius: 15rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 15rpx rgba(0, 0, 0, 0.1);
}

.quick-action-icon {
  font-size: 40rpx;
  margin-bottom: 15rpx;
}

.quick-action-text {
  font-size: 24rpx;
  color: #333;
  line-height: 1.3;
}

/* 应用设置 */
.app-settings-section {
  margin-bottom: 30rpx;
}

.settings-list {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #eee;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-left {
  display: flex;
  align-items: center;
}

.setting-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.setting-text {
  font-size: 30rpx;
  color: #333;
}

.setting-right {
  display: flex;
  align-items: center;
}

/* 数据管理 */
.data-management-section {
  margin-bottom: 30rpx;
}

.data-stats {
  display: flex;
  justify-content: space-around;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.data-stat-item {
  text-align: center;
  flex: 1;
}

.data-stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #00b894;
  margin-bottom: 10rpx;
}

.data-stat-label {
  font-size: 24rpx;
  color: #666;
}

.data-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.data-action-btn {
  flex: 1;
  min-width: 200rpx;
  height: 80rpx;
  background: white;
  border: 2rpx solid #ddd;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #333;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.data-action-btn::after {
  border: none;
}

.btn-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.btn-text {
  font-size: 26rpx;
}

/* 关于与帮助 */
.about-section {
  margin-bottom: 30rpx;
}

.about-list {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.about-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #eee;
}

.about-item:last-child {
  border-bottom: none;
}

.about-left {
  display: flex;
  align-items: center;
}

.about-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.about-text {
  font-size: 30rpx;
  color: #333;
}

.about-right {
  display: flex;
  align-items: center;
}

.about-version {
  font-size: 24rpx;
  color: #999;
  margin-right: 10rpx;
}

.about-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 危险操作 */
.danger-section {
  margin-bottom: 30rpx;
}

.danger-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  border: none;
  border-radius: 15rpx;
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(231, 76, 60, 0.3);
}

.danger-btn::after {
  border: none;
}

.danger-btn-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.danger-btn-text {
  font-size: 28rpx;
}

/* 版权信息 */
.copyright-section {
  margin-bottom: 30rpx;
}

.copyright-text {
  text-align: center;
  padding: 30rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.copyright-line {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
  display: block;
  margin-bottom: 8rpx;
}

.copyright-line:last-child {
  margin-bottom: 0;
  color: #666;
  font-weight: bold;
}

/* 响应式设计 */
@media (max-width: 400px) {
  .container {
    padding: 15rpx;
  }
  
  .user-info-card {
    flex-direction: column;
    text-align: center;
  }
  
  .user-avatar {
    margin-right: 0;
    margin-bottom: 20rpx;
  }
  
  .quick-actions {
    flex-direction: column;
  }
  
  .quick-action-item {
    margin-bottom: 10rpx;
  }
  
  .data-stats {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .data-actions {
    flex-direction: column;
  }
  
  .data-action-btn {
    margin-bottom: 10rpx;
  }
}

/* 动画效果 */
.user-info-card,
.quick-action-item,
.settings-list,
.data-stats,
.about-list,
.danger-btn,
.copyright-text {
  animation: fadeIn 0.5s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 悬浮效果 */
.quick-action-item:active,
.data-action-btn:active,
.setting-item:active,
.about-item:active {
  transform: scale(0.98);
  transition: transform 0.1s ease-out;
}

/* 用户头像动画 */
.user-avatar {
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

/* 数据统计数字动画 */
.data-stat-value {
  animation: countUp 0.8s ease-out;
}

@keyframes countUp {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
} 