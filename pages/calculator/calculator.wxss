/* pages/calculator/calculator.wxss - 苹果风格深绿色主题 */

/* 主要内容区域 */
.main-content {
  padding-top: 120rpx;
  padding-bottom: 40rpx;
  min-height: 100vh;
}

/* 导航栏样式 */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-bottom: 1px solid var(--border-light);
  transition: all 0.3s ease;
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  height: 88rpx;
}

.navbar-title {
  display: flex;
  align-items: center;
}

.navbar-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
  color: var(--primary-green);
}

.navbar-text {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.navbar-actions {
  display: flex;
  align-items: center;
}

.navbar-btn {
  background: transparent;
  border: none;
  padding: 16rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.navbar-btn:active {
  background: rgba(0, 100, 0, 0.1);
}

.navbar-btn-icon {
  font-size: 32rpx;
  color: var(--text-secondary);
}

/* 页面标题卡片 */
.header-card {
  margin: 24rpx 32rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(248, 255, 254, 0.95) 100%);
  text-align: center;
  padding: 48rpx 32rpx;
}

.header-icon {
  font-size: 64rpx;
  color: var(--primary-green);
  margin-bottom: 24rpx;
  display: block;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-primary);
  display: block;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  display: block;
}

/* 显示卡片样式 */
.display-card {
  margin: 24rpx 32rpx;
}

.display-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.display-title {
  display: flex;
  align-items: center;
}

.display-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  color: var(--primary-green);
}

.display-text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.edit-btn {
  background: rgba(255, 255, 255, 0.8);
  border: 1px solid var(--border-light);
  border-radius: 12rpx;
  padding: 12rpx 24rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.edit-btn:active {
  background: var(--primary-green);
  color: white;
}

.edit-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.edit-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 收入摘要 */
.income-summary {
  background: rgba(255, 255, 255, 0.5);
  border-radius: 16rpx;
  padding: 32rpx;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.income-main {
  text-align: center;
  margin-bottom: 32rpx;
}

.income-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  display: block;
  margin-bottom: 8rpx;
}

.income-value {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--primary-green);
  display: block;
}

.income-breakdown {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.breakdown-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
}

.breakdown-label {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.breakdown-value {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
}

/* 输入卡片样式 */
.input-card {
  margin: 24rpx 32rpx;
}

.input-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.input-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  color: var(--primary-green);
}

.input-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

/* 表单样式 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  display: block;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid var(--border-light);
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 32rpx;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: var(--primary-green);
  box-shadow: 0 0 0 4rpx rgba(0, 100, 0, 0.1);
}

.picker-input {
  width: 100%;
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid var(--border-light);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.3s ease;
}

.picker-text {
  font-size: 32rpx;
  color: var(--text-primary);
}

.picker-arrow {
  font-size: 24rpx;
  color: var(--text-light);
}

.form-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 48rpx;
}

.form-actions .btn {
  flex: 1;
}

/* 结果卡片样式 */
.result-card {
  margin: 24rpx 32rpx;
}

.result-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.result-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  color: var(--primary-green);
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.result-main {
  background: rgba(255, 255, 255, 0.5);
  border-radius: 16rpx;
  padding: 32rpx;
  border: 1px solid rgba(255, 255, 255, 0.2);
  margin-bottom: 24rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.result-item:last-child {
  margin-bottom: 0;
}

.result-label {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.result-value {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.result-value.highlight {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--primary-green);
}

.result-tip {
  display: flex;
  align-items: flex-start;
  background: rgba(0, 100, 0, 0.05);
  border-radius: 12rpx;
  padding: 24rpx;
  border-left: 4rpx solid var(--primary-green);
}

.tip-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
  color: var(--primary-green);
}

.tip-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

/* 提示卡片样式 */
.tips-card {
  margin: 24rpx 32rpx;
}

.tips-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.tips-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  color: var(--primary-green);
}

.tips-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
}

.tip-bullet {
  font-size: 24rpx;
  color: var(--primary-green);
  margin-right: 12rpx;
  margin-top: 4rpx;
}

.tip-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  flex: 1;
}

/* 操作卡片样式 */
.actions-card {
  margin: 24rpx 32rpx;
}

.actions-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.action-btn {
  background: rgba(255, 255, 255, 0.5);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-btn:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx var(--shadow-light);
  background: rgba(255, 255, 255, 0.8);
}

.action-btn:active {
  transform: translateY(-2rpx);
}

.action-btn.danger {
  background: rgba(255, 59, 48, 0.1);
  border-color: rgba(255, 59, 48, 0.2);
}

.action-btn.danger:hover {
  background: rgba(255, 59, 48, 0.15);
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  color: var(--primary-green);
}

.action-btn.danger .action-icon {
  color: #FF3B30;
}

.action-text {
  font-size: 26rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.action-btn.danger .action-text {
  color: #FF3B30;
}

/* 底部版权信息 */
.footer-card {
  margin: 24rpx 32rpx;
  text-align: center;
  background: rgba(255, 255, 255, 0.5);
}

.footer-text {
  font-size: 28rpx;
  color: var(--text-primary);
  font-style: italic;
  display: block;
  margin-bottom: 12rpx;
}

.footer-author {
  font-size: 24rpx;
  color: var(--text-secondary);
  display: block;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .main-content {
    padding-top: 100rpx;
  }
  
  .header-card,
  .display-card,
  .input-card,
  .result-card,
  .tips-card,
  .actions-card,
  .footer-card {
    margin: 16rpx 24rpx;
  }
  
  .actions-grid {
    grid-template-columns: 1fr;
  }
  
  .form-actions {
    flex-direction: column;
  }
}

/* 动画延迟 */
.fade-in-up:nth-child(1) { animation-delay: 0.1s; }
.fade-in-up:nth-child(2) { animation-delay: 0.2s; }
.fade-in-up:nth-child(3) { animation-delay: 0.3s; }
.fade-in-up:nth-child(4) { animation-delay: 0.4s; }
.fade-in-up:nth-child(5) { animation-delay: 0.5s; }
.fade-in-up:nth-child(6) { animation-delay: 0.6s; }