/* pages/calculator/calculator.wxss */

.container {
  padding: 24rpx;
  background: #f2f2f7;
  min-height: 100vh;
}

/* 通用卡片基础样式 */
.card-base {
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  width: 100%;
  box-sizing: border-box;
}

/* 页面标题 - 苹果风格设计 */
.header {
  text-align: center;
  padding: 48rpx 32rpx;
  color: #1d1d1f;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
  color: #1d1d1f;
}

.subtitle {
  font-size: 26rpx;
  color: #86868b;
  display: block;
  font-weight: 400;
}

/* 显示模式 - 收入信息显示 */
.display-section {
  margin-bottom: 0;
}

.income-display {
  padding: 32rpx;
}

.display-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.display-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.btn-edit {
  background: #007aff;
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.btn-edit:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.income-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e5e5ea;
  margin-bottom: 16rpx;
}

.income-label {
  font-size: 28rpx;
  color: #86868b;
  font-weight: 500;
}

.income-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #007aff;
}

.income-breakdown {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.breakdown-item {
  font-size: 24rpx;
  color: #86868b;
  background: #f2f2f7;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  display: inline-block;
}

/* 编辑模式 - 输入表单 */
.input-section {
  padding: 32rpx;
  margin-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 24rpx;
  text-align: center;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 30rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 12rpx;
  letter-spacing: -0.2rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  border: 1rpx solid #d1d1d6;
  border-radius: 16rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  color: #1d1d1f;
  box-sizing: border-box;
  background: #ffffff;
  transition: all 0.2s ease;
  font-weight: 400;
}

.input:focus {
  border-color: #007aff;
  background: #ffffff;
}

.picker {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 20rpx;
  border: 1rpx solid #d1d1d6;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #1d1d1f;
  background: #ffffff;
  font-weight: 400;
}

/* 编辑按钮组 */
.edit-buttons {
  display: flex;
  gap: 12rpx;
  margin-top: 32rpx;
}

.edit-buttons .btn {
  flex: 1;
}

/* 计算结果 - 苹果风格设计 */
.result-section {
  margin-bottom: 0;
}

.result-card {
  padding: 32rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
  text-align: center;
  margin-bottom: 32rpx;
  letter-spacing: -0.3rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  background: #f2f2f7;
  transition: all 0.2s ease;
}

.result-item:last-child {
  margin-bottom: 0;
}

.main-result {
  background: #007aff;
  color: white;
  margin-bottom: 24rpx;
}

.main-result .result-label,
.main-result .result-value {
  color: white;
}

.result-label {
  font-size: 28rpx;
  color: #86868b;
  font-weight: 500;
}

.result-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
  letter-spacing: -0.2rpx;
}

.highlight {
  color: white;
  font-size: 36rpx;
  font-weight: 600;
}

.result-tip {
  text-align: center;
  padding: 16rpx;
  background: rgba(52, 199, 89, 0.1);
  border-radius: 12rpx;
  margin-top: 16rpx;
}

.result-tip text {
  font-size: 24rpx;
  color: #34c759;
  font-weight: 500;
}

/* 提示信息 */
.tips-section {
  margin-bottom: 0;
}

.tips-card {
  padding: 32rpx;
}

.tips-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 16rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
}

.tips-content text {
  margin-bottom: 8rpx;
}

.tips-content text:last-child {
  margin-bottom: 0;
}

.tips-content text {
  font-size: 24rpx;
  color: #86868b;
  line-height: 1.4;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 12rpx;
  margin-top: 16rpx;
  margin-bottom: 0;
}

.action-buttons .btn {
  flex: 1;
}

.btn {
  height: 88rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.btn:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.btn-primary {
  background: #007aff;
  color: white;
}

.btn-secondary {
  background: #34c759;
  color: white;
}

.btn-outline {
  background: #ffffff;
  color: #86868b;
  border: 1rpx solid #d1d1d6;
}

.btn-danger {
  background: #ff3b30;
  color: white;
}

.btn::after {
  border: none;
}

/* 底部说明 */
.footer {
  text-align: center;
  padding: 32rpx 0;
  margin-top: 16rpx;
}

.quote {
  font-size: 26rpx;
  font-style: italic;
  display: block;
  margin-bottom: 8rpx;
  color: #1d1d1f;
  font-weight: 500;
}

.author {
  font-size: 22rpx;
  display: block;
  color: #86868b;
}

/* 响应式设计 */
@media (max-width: 400px) {
  .container {
    padding: 15rpx;
  }
  
  .title {
    font-size: 40rpx;
  }
  
  .subtitle {
    font-size: 24rpx;
  }
  
  .input-section {
    padding: 20rpx;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .btn {
    margin-bottom: 15rpx;
  }
}

/* 动画效果 */
.result-card {
  animation: slideIn 0.5s ease-out;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.tips-card {
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}