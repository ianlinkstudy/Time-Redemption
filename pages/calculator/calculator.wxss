/* pages/calculator/calculator.wxss */

.container {
  padding: 24rpx;
  background: linear-gradient(135deg, #f8faff 0%, #f5f7ff 100%);
  min-height: 100vh;
}

/* 页面标题 - 多巴胺设计 */
.header {
  text-align: center;
  margin-bottom: 48rpx;
  padding: 56rpx 40rpx;
  background: #FFD93D;
  border-radius: 24rpx;
  color: #1F2937;
  box-shadow: 0 16rpx 48rpx rgba(253, 224, 71, 0.3);
  position: relative;
  overflow: hidden;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

/* 输入区域 - 多巴胺卡片设计 */
.input-section {
  background: #1E3A8A;
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 12rpx 40rpx rgba(30, 58, 138, 0.2);
  border: none;
  position: relative;
  overflow: hidden;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  letter-spacing: -0.3rpx;
}

.input {
  width: 100%;
  height: 96rpx;
  border: 2rpx solid #e8f0ff;
  border-radius: 20rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #1a1a1a;
  box-sizing: border-box;
  background: linear-gradient(135deg, #f8faff 0%, #ffffff 100%);
  transition: all 0.3s ease;
  font-weight: 500;
}

.picker {
  height: 96rpx;
  line-height: 96rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e8f0ff;
  border-radius: 20rpx;
  font-size: 32rpx;
  color: #1a1a1a;
  background: linear-gradient(135deg, #f8faff 0%, #ffffff 100%);
  font-weight: 500;
}

/* 信息文本样式 */
.info-text {
  font-size: 28rpx;
  color: #666;
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
  text-align: center;
}

/* 计算结果 - 多巴胺卡片设计 */
.result-section {
  margin-bottom: 32rpx;
}

.result-card {
  background: #10B981;
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(16, 185, 129, 0.25);
  border: none;
  position: relative;
  overflow: hidden;
}

.result-title {
  font-size: 40rpx;
  font-weight: 800;
  color: #1a1a1a;
  text-align: center;
  margin-bottom: 40rpx;
  letter-spacing: -0.5rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 32rpx 24rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #f8faff 0%, #ffffff 100%);
  border: 2rpx solid #e8f0ff;
  transition: all 0.3s ease;
}

.result-item:last-child {
  margin-bottom: 0;
}

.main-result {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  margin-bottom: 32rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.main-result .result-label,
.main-result .result-value {
  color: white;
}

.result-label {
  font-size: 30rpx;
  color: #666;
  font-weight: 500;
}

.result-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  letter-spacing: -0.3rpx;
}

.highlight {
  color: #667eea;
  font-size: 40rpx;
  font-weight: 800;
}

.result-tip {
  text-align: center;
  padding: 20rpx;
  background: #fff3cd;
  border-radius: 15rpx;
  border: 2rpx solid #ffeaa7;
}

.result-tip text {
  font-size: 26rpx;
  color: #856404;
}

/* 提示信息 */
.tips-section {
  margin-bottom: 30rpx;
}

.tips-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
}

.tips-content text {
  margin-bottom: 10rpx;
}

.tips-content text:last-child {
  margin-bottom: 0;
}

.tips-content text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  margin: 0 -10rpx 30rpx -10rpx;
}

.action-buttons .btn {
  margin: 0 10rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 15rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  color: white;
}

.btn-secondary {
  background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
}

.btn-danger {
  background: linear-gradient(135deg, #fd79a8 0%, #e84393 100%);
}

.btn::after {
  border: none;
}

/* 底部说明 */
.footer {
  text-align: center;
  padding: 30rpx 0;
  color: #888;
}

.quote {
  font-size: 28rpx;
  font-style: italic;
  display: block;
  margin-bottom: 10rpx;
  color: #667eea;
}

.author {
  font-size: 24rpx;
  display: block;
}

/* 响应式设计 */
@media (max-width: 400px) {
  .container {
    padding: 15rpx;
  }
  
  .title {
    font-size: 40rpx;
  }
  
  .subtitle {
    font-size: 24rpx;
  }
  
  .input-section {
    padding: 20rpx;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .btn {
    margin-bottom: 15rpx;
  }
}

/* 动画效果 */
.result-card {
  animation: slideIn 0.5s ease-out;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.tips-card {
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}